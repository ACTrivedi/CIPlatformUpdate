@using CIPlatformIntegration.Entities.Models;
@using CIPlatformIntegration.Entities.ViewModel

<html>
<head>
    <title>
        Related Mission Partial view
    </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    @*CSS and JS file for Volunteering mission page PARTIAL VIEW*@
    <link rel="stylesheet" href="~/css/RelatedMission.css" />



</head>

<body>
    <div class="container-fluid">
        <div class="card-cont row justify-content-sm-evenly" id="">


            @{
                var relatedmissions = @ViewBag.relatedmission;

                foreach (var modeldetail in relatedmissions)

                {

                    var countries=@ViewData["countries"];
                    var cities = @ViewData["cities"];
                    var themes = ViewData["themes"];
                    var skills = @ViewData["skills"];
                    var goalMission = ViewData["goalMission"]; 




                    <div class="col-info col-12 col-md-6 col-lg-4">
                        <div class="card1 card my-5">
                            <img class="cardimage card-img-top" src="~/images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity.png" alt="Card image cap">
                            <div class="justify-content-center d-flex">
                            @{                               
                                foreach (var i in themes as IEnumerable<MissionTheme>)
                                {
                                    if(@i.MissionThemeId == modeldetail.ThemeId)
                                    {
                                    <div class="px-5 p-1 rounded-pill " style="background-color: white;margin-top: -16px;"><p>@i.Title</p> </div>
                                    }
                                }
                            }

                                
                            </div>
                            <div class="card-body">
                                <p class="card-title" style="font-size:18px;">@modeldetail.Title </p>
                                <p class="card-text" style="color:#757575; font-size:11px">@modeldetail.ShortDescription</p>

                                <div class="d-flex justify-content-between">
                                    <div>Tree Canada</div>
                                    <div class="flex">
                                        <img src="~/images/selected-star.png" />
                                        <img src="~/images/selected-star.png" />
                                        <img src="~/images/selected-star.png" />
                                        <img src="~/images/selected-star.png" />
                                        <img src="~/images/selected-star.png" />
                                    </div>
                                </div>

                                <div class="SEDdiv">

                                    <hr>
                                    <div class="p-1 rounded-pill my-3" style="background-color:#F5F5F5; text-align:center">Ongoing Opportunity</div>
                                    <hr>

                                </div>


                                <div class="d-flex justify-content-between">
                                    <div class="">
                                        <img src="~/images/Seats-left.png" />
                                        <span>10</span>
                                        <p> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Seats left</p>

                                    </div>

                                    <div class=" d-flex justify-content-end">
                                        <img class="w-10 targetimage" src="~/images/achieved.png" />
                                        <div>
                                            <div class="w-90 progress my-1">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>

                                            </div>
                                            <span>8000 achieved</span>
                                        </div>

                                    </div>

                                </div>



                                <div>

                                      @{
                                        @foreach (var i in Model as IEnumerable<Mission>)
                                        {
                                            if (i.MissionId == @modeldetail.MissionId)
                                            {
                                                <a asp-controller="Home" asp-action="VolunteeringMissionPage" asp-route-missionid="@i.MissionId" class="btn border-warning rounded-pill" style="position: relative;left: 30%;">
                                                    <span style="color:orange">Apply &nbsp; </span> <img src="~/images/right-arrow.png" />
                                                </a>

                                            }
                                            else
                                            {
                                                
                                            }

                                            

                                        }

                                      }

                                   
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }














            @*For Second row*@


        </div>

</body>

</html>
