@using CIPlatformIntegration.Entities.Models;
@using CIPlatformIntegration.Entities.ViewModel;
@model IEnumerable<CIPlatformIntegration.Entities.Models.Story>;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Story Listing Page</title>
    <link rel="stylesheet" href="~/css/StoryListingPage.css" /></link>


    @*CSS file for HeaderBar*@
    <link rel="stylesheet" href="~/css/HeaderBar.css"></link>


</head>
<body>

    @Html.Partial("_HeaderBar")



    <div class="container-fluid p-0">
        <div class="banner">
            <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="bannerimage" />
            <div class="container position-relative p-0">
                <div class="row justify-content-center textblock">
                    <div class="col-xl-6">
                        <div class="text-center mt-3">
                            <!-- Page heading-->
                            <h5 class="mb-5 ">Illum et congue veniam dolor invidunt vero laoreet vero eirmod eirmod consequat eos ipsum labore accusam eos dolor est duo</h5>

                            <a asp-controller="StoryListing" asp-action="StoryAddingPage">
                                <button class="btn border border-white rounded-pill sharestorybutton" id="submitButton" type="submit" style="color:white;">Share your Story <img src="~/images/right-arrow.png" /></button>
                            </a>

                        </div>
                    </div>
                </div>
            </div>

        </div>




        <div class="container mt-5">
            <div class="row">

                @{
                    var users = @ViewData["users"];
                    foreach (var i in Model)
                    {
                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 mt-3">
                            <div class="card" style="">
                                <img style="position:relative" src="~/images/Animal-welfare-_-save-birds-campaign.png" class="card-img-top" alt="...">
                                <button style="position:absolute;" type="button" class="btn btn-outline-secondary">Secondary</button>



                                <div class="card-body">
                                    <h5 class="card-title">@i.Title</h5>
                                    <p class="card-text">@Html.Raw(@i.Description)</p>

                                    <div class="d-flex">
                                        <div><img class="rounded-circle" src="~/images/volunteer1.png" style="height:33px" /></div>

                                        @{
                                            foreach (var y in users as IEnumerable<User>)
                                            {
                                                if (y.UserId == i.UserId)
                                                {
                                                    <div style="position:relative; left:5%;"><p class="mb-0">@y.FirstName</p></div>
                                                }
                                                continue;
                                            }
                                        }
                                        

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }







            </div>

        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
