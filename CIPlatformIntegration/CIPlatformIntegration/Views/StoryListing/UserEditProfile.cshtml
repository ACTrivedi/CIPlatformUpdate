@using CIPlatformIntegration.Entities.Models;
@using CIPlatformIntegration.Entities.ViewModel;
@model UserEditProfileViewModel;


<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoryAdding</title>

    @*For Bootstrap*@

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


    @*CSS file for HeaderBar*@
    <link rel="stylesheet" href="~/css/HeaderBar.css"></link>


    @*CSS file for UserEditUserProfile*@
    <link rel="stylesheet" href="~/css/.css"></link>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/js/UserEditProfile.js"></script>

    <style>
        .dual-list .list-group {
            margin-top: 8px;
        }

        .list-left li, .list-right li {
            cursor: pointer;
        }

        .list-arrows {
            padding-top: 100px;
        }

            .list-arrows button {
                margin-bottom: 20px;
            }
    </style>


</head>

<body>


    @Html.Partial("_HeaderBar")

    <div class="container">

        <form class="row g-5" method="post" action="UserEditProfile">

            <div class="row mt-3">
                <div class="col col-lg-2 col-md-12 col-sm-12">
                    <div class="d-flex flex-column mt-5" style="align-content: center; flex-wrap: wrap;">
                        <img src="/images/user-img.png" class="rounded-circle" style="width:125px; height:125px;" />


                        <div class="mt-3">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn" data-toggle="modal" data-target="#exampleModalCenter">
                                Change Password
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Change Password</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="text" class="form-control" placeholder="Enter old password" id="" name="">
                                            <input type="text" class="form-control mt-3" placeholder="Enter new password" id="" name="">
                                            <input type="text" class="form-control mt-3" placeholder="Enter confirm password" id="" name="">
                                        </div>
                                        <div class="modal-footer">

                                            <button type="button" class="btn btn-outline-secondary rounded-pill" data-dismiss="modal">Cancel</button>

                                            <a asp-action="VolunteeringMissionPage" class="btn btn-outline-warning rounded-pill">
                                                <span>Change Password </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>


                    </div>

                </div>




                <div class="col col-lg-10 col-md-12 col-sm-12">


                    <h2 style="border-bottom:2px solid black; width:fit-content;padding-block-end: 12px;">Basic Information</h2>
                    <hr style="margin-top: -9px;" />


                    <div class="row gy-3">
                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Name</label>
                            <input type="text" class="form-control" placeholder="Enter Your Name" id="" name="name" value=@Model.IndividualUser.FirstName !=null ? @Model.IndividualUser.FirstName : "">


                        </div>

                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Surname</label>
                            <input type="text" class="form-control" placeholder="Enter Your Surname" id="" name="surname" value=@Model.IndividualUser.LastName !=null ? @Model.IndividualUser.LastName : "">


                        </div>

                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Employee ID</label>
                            <input type="text" class="form-control" placeholder="Enter Your Employee ID" id="" name="employeeID" value=@Model.IndividualUser.EmployeeId !=null ? @Model.IndividualUser.EmployeeId : "">


                        </div>

                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Manager</label>
                            <input type="text" class="form-control" placeholder="Enter Your Manager Details" id="" name="manager">


                        </div>

                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Title</label>
                            <input type="text" class="form-control" placeholder="Enter Your Title" id="" name="title" value=@Model.IndividualUser.Title !=null ? @Model.IndividualUser.Title : "">


                        </div>

                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Department</label>
                            <input type="text" class="form-control" placeholder="Enter Your Department" id="" name="department" value=@Model.IndividualUser.Department !=null ? @Model.IndividualUser.Department : "">


                        </div>

                        <div class="col-lg-12">

                            <label for="inputState" class="form-label">My Profile</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter Your Comments" name="profile" value=@Model.IndividualUser.ProfileText !=null ? @Model.IndividualUser.ProfileText : ""></textarea>


                        </div>

                        <div class="col-lg-12">

                            <label for="inputState" class="form-label">Why I Volunteer?</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Why I Volunteer?">@Model.IndividualUser.WhyIVolunteer
                        </textarea>


                        </div>

                    </div>



                    <h2 class="mt-4" style="border-bottom:2px solid black; width:fit-content;padding-block-end: 12px;">Address Information</h2>
                    <hr style="margin-top: -9px;" />




                    <div class="row gy-3">

                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Country</label>


                            <div class="dropdown-center">
                                <button class="col-lg-12 btn dropdown-toggle" style="text-align:left; color:gray; border: 1px solid #ced4da;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Select your Country
                                </button>
                                <div class="row">
                                </div>
                                <div class="col-lg-2">
                                </div>

                                <ul class=" dropdown-menu  dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">Action</a></li>
                                    <li><a class="dropdown-item" href="#">Another action</a></li>
                                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                                </ul>


                            </div>

                        </div>



                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">City</label>
                            <input type="text" class="form-control" placeholder="Enter Your City" id="" name="">


                        </div>




                    </div>





                    <h2 class="mt-4" style="border-bottom:2px solid black; width:fit-content;padding-block-end: 12px;">Professional Information</h2>
                    <hr style="margin-top: -9px;" />




                    <div class="row gy-3">

                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">Availability</label>


                            <div class="dropdown-center">
                                <button class="col-lg-12 btn dropdown-toggle" style="text-align:left; color:grey; border: 1px solid #ced4da;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Select your Availability
                                </button>
                                <div class="row">
                                </div>
                                <div class="col-lg-2">
                                </div>

                                <ul class=" dropdown-menu  dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">Action</a></li>
                                    <li><a class="dropdown-item" href="#">Another action</a></li>
                                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                                </ul>


                            </div>

                        </div>



                        <div class="col-lg-6">

                            <label for="inputState" class="form-label">LinkedIn</label>
                            <input type="text" class="form-control" placeholder="Enter LinkedIn URl" id="" name="linkedInUrl" value=@Model.IndividualUser.LinkedInUrl !=null ? @Model.IndividualUser.LinkedInUrl : "">


                        </div>




                    </div>


                    <h2 class="mt-4" style="border-bottom:2px solid black; width:fit-content;padding-block-end: 12px;">My Skills</h2>
                    <hr style="margin-top: -9px;" />

                    <div class="mt-3">
                        <!-- Button trigger modal -->
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
                            Add Skills
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">

                                            <div class="dual-list list-left col-md-5">
                                                <div class="well text-right">
                                                    <div class="row">
                                                        <div class="col-md-10">
                                                            <div class="input-group">
                                                                <span class="input-group-addon glyphicon glyphicon-search"></span>
                                                                <input type="text" name="SearchDualList" class="form-control" placeholder="search" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <div class="btn-group">
                                                                <a class="btn btn-default selector" title="select all"><i class="glyphicon glyphicon-unchecked"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <ul class="list-group">
                                                        <li class="list-group-item">Skill1</li>
                                                        <li class="list-group-item">Skill2</li>
                                                        <li class="list-group-item">Skill3</li>
                                                        <li class="list-group-item">Skill4</li>
                                                        <li class="list-group-item">Skill5</li>
                                                    </ul>
                                                </div>
                                            </div>

                                            <div class="list-arrows col-md-1 text-center">
                                                <button class="btn btn-default btn-sm move-left">
                                                    <
                                                </button>

                                                <button class="btn btn-default btn-sm move-right">
                                                    >
                                                </button>
                                            </div>

                                            <div class="dual-list list-right col-md-5">
                                                <div class="well">
                                                    <div class="row">
                                                        <div class="col-md-2">
                                                            <div class="btn-group">
                                                                <a class="btn btn-default selector" title="select all"><i class="glyphicon glyphicon-unchecked"></i></a>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-10">
                                                            <div class="input-group">
                                                                <input type="text" name="SearchDualList" class="form-control" placeholder="search" />
                                                                <span class="input-group-addon glyphicon glyphicon-search"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <ul class="list-group">
                                                        <li class="list-group-item">Skill6</li>
                                                        <li class="list-group-item">Skill7</li>
                                                        <li class="list-group-item">Skill8</li>
                                                        <li class="list-group-item">Skill9</li>
                                                        <li class="list-group-item">Skill10</li>
                                                    </ul>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>



                    <div class="d-flex justify-content-end">

                        <input type="submit" class="btn btn-outline-warning rounded-pill" value="Save" />


                    </div>


                </div>




            </div>







        </form>






    </div>

















    @*For Sweetalert*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    @* For Bootstrap*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>




</body>



</html>
