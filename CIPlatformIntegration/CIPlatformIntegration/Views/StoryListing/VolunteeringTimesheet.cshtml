@using CIPlatformIntegration.Entities.Models;
@using CIPlatformIntegration.Entities.ViewModel;

@model VolunteeringTimesheetViewModel;

<html>
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    @*CSS file for HeaderBar*@
    <link rel="stylesheet" href="~/css/HeaderBar.css" />
    <style>

        #plusButton {
            color: orange;
        }

        .button:hover {
        }

    </style>

</head>

<body>

    @Html.Partial("_HeaderBar")



    <div class="container mt-5">
        <h3>Volunteering Timesheet</h3>

        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12">

                <div class="d-flex justify-content-between mt-5 mb-3">
                    <h5>Volunteering Hours</h5>






                    <div><button type="button" class="btn btn-outline-warning rounded-pill button" data-toggle="modal" data-target="#exampleModalCenter2"><i id="plusButton" class="fa-regular fa-plus mr-1"></i> Add</button></div>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                              <form class="row g-5" method="post" action="VolunteeringTimesheet">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Please input below Volunteering Hours</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                                                                                                      
                                            @{
                                                <div class="col-lg-12 col-md-12 col-sm-12">

                                                    <label for="inputState" class="form-label">Select Mission</label>
                                                    <select id="inputState" class="form-select" required name="selectFromDropdown" onchange="">

                                                        <option class="drop-value" value="Select Mission" name="selectedMissionId">Select Mission</option>

                                                        @foreach (var i in Model.missionsApplication)
                                                        {
                                                            <option class="drop-value" value="@i.MissionId">@i.Mission.Title</option>
                                                        }

                                                    </select>
                                                </div>
                                            }

                                            <div class="col-lg-12 col-md-12 col-sm-12 mt-3">

                                                <label for="inputState" class="form-label">Date Volunteered</label>
                                                <input required type="date" class="form-control" placeholder="Select Date" id="" name="dateVolunteer">

                                            </div>

                                            <div class="col-lg-6 col-md-12 col-sm-12 mt-3">
                                                <label for="inputState" class="form-label mb-0">Hours</label>
                                                <input type="text" class="form-control" placeholder="Hours" id="" name="hours">
                                            </div>

                                            <div class="col-lg-6 col-md-12 col-sm-12 mt-3">
                                                <label for="inputState" class="form-label mb-0">Minutes</label>
                                                <input type="text" class="form-control" placeholder="Minutes" id="" name="minutes">
                                            </div>

                                            <label for="inputState" class="form-label mb-0 mt-3">Message</label>
                                            <input type="text" class="form-control" placeholder="Enter your Message" id="" name="message">
                                                                                                                          


                                    </div>


                                </div>
                                <div class="modal-footer">

                                    <button type="button" class="btn btn-outline-secondary rounded-pill" id="cancelPrompt" data-dismiss="modal">Cancel</button>

                                     <input id="disabled"  type="submit" class=" btn btn-warning rounded-pill" style=" padding-right: 21px; padding-left: 18px; border-color:black !important;" value="Submit" />

                                </div>
                            </div>

                             </form>
                        </div>
                    </div>


                </div>


                <table class="table" id="timetble">
                    <thead>
                        <tr>

                            <th scope="col">Mission</th>
                            <th scope="col">Date</th>
                            <th scope="col">Hours</th>
                            <th scope="col">Minutes</th>
                            <th scope="col"></th>



                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            <td>Envirenment Conservation</td>
                            <td>22/02/2022</td>
                            <td>1h</td>
                            <td>30min</td>
                            <td><span><i class="fa-sharp fa-solid fa-pen-to-square" style="color: #000000;"></i></span> &nbsp; &nbsp;  <span><i class="fa-sharp fa-solid fa-trash"></i></span></td>

                        </tr>
                        <tr>
                            <td>Jacob</td>
                            <td>Thornton</td>
                            <td>fat</td>
                        </tr>

                    </tbody>
                </table>
            </div>







            <div class="col-lg-6 col-md-12 col-sm-12">

                <div class="d-flex justify-content-between mt-5 mb-3">
                    <h5>Volunteering Goals</h5>

                    <div><button type="button" class="btn btn-outline-warning rounded-pill button"><i id="plusButton" class="fa-regular fa-plus mr-1"></i> Add</button></div>
                </div>


                <table class="table" id="timetble">
                    <thead>
                        <tr>

                            <th scope="col">Mission</th>
                            <th scope="col">Date</th>
                            <th scope="col">Action</th>
                            <th scope="col"></th>



                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            <td>Environment Conservation</td>
                            <td>22/02/2022</td>
                            <td>0</td>
                            <td><span><i class="fa-sharp fa-solid fa-pen-to-square" style="color: #000000;"></i></span> &nbsp; &nbsp;  <span><i class="fa-sharp fa-solid fa-trash"></i></span></td>

                        </tr>
                        <tr>
                            <td>Envirenment Conservation</td>
                            <td>22/02/2022</td>
                            <td>0</td>
                            <td>Edit Delete</td>
                        </tr>

                    </tbody>
                </table>
            </div>

        </div>




    </div>



    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $('#timetble').DataTable();

    </script>
</body>
</html>