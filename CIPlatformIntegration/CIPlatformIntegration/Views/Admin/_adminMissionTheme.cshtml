@model CIPlatformIntegration.Entities.ViewModel.AdminViewModel;
<div>
    <h2 class="missionApplicationTag">Mission Theme</h2>
    <hr style="margin-top: -10px;" />

</div>

<button type="button" class="btn btn-outline-warning rounded-pill" data-bs-toggle="modal" data-bs-target="#exampleModalAdminThemeAdd" style="position: relative;top: 4.5vh;left: 73vw; z-index:1"> Add</button>

<table id="missionsThemeDataTable" class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Theme Title</th>
            <th scope="col">Status</th>

            <th scope="col" style="text-align:center">Action</th>

        </tr>
    </thead>
    <tbody>

        @{

            <!-- Modal -->
            foreach (var i in Model.missionThemes)
            {

                <tr>
                    <th scope="row">@i.Title</th>

                    @{
                        if (@i.Status == 1)
                        { 
                             <td>Active</td>
                        }
                        if (@i.Status == 0)
                        { 
                             <td>InActive</td>
                        }
                    }                                     


                    <td class="justify-content-evenly d-flex">

                        <span class="approveMissionTheme"  value="@i.MissionThemeId" type="button" id=""><i class="bi bi-check-circle" style="color:green;"></i></span>
                        <span class="deleteMissionTheme"  value="@i.MissionThemeId" type="button" id=""><i class="bi bi-x-circle" style="color:red;"></i></span>

                    </td>

                </tr>

            }
        }

    </tbody>
</table>


<div class="modal fade" id="exampleModalAdminThemeAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" >

       
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Mission Theme</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body ">

                    <div class="row g-3">
                        <div class="col-lg-12">
                            <label for="" class="form-label">Theme Title</label>
                            <input type="text" class="form-control" name="Title" id="Title" placeholder="Enter Theme Title" required>
                            <span class="d-none" id="titleSpan" style="color: red; font-size: 14px;">*Please enter something!</span>
                        </div>


                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-outline-secondary rounded-pill" id="cancelPrompt" data-bs-dismiss="modal">Cancel</button>

                    <button type="button" class="btn btn-outline-warning rounded-pill" id="addMissionTheme">Create</button>
                </div>
            </div>
        
    </div>
</div>