@model CIPlatformIntegration.Entities.ViewModel.AdminViewModel;
<div>
    <h2 class="CMSTag">CMS Page</h2>
    <hr style="margin-top: -10px;" />

</div>

<button type="button" class="btn btn-outline-warning rounded-pill" data-bs-toggle="modal" data-bs-target="#exampleModalCMSAdd" style="position: relative;top: 4.5vh;left: 73vw; z-index:1"> Add</button>

<table id="CMSDataTable" class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Status</th>

            <th scope="col" style="text-align:center">Action</th>

        </tr>
    </thead>
    <tbody>

        @{

            <!-- Modal -->
            foreach (var i in Model.cmsPages)
            {
                <tr>
                    <th scope="row">@i.Title</th>

                    @{
                        if (@i.Status == 1)
                        {
                            <td style="color:#14C506; font-size:16px;">Active</td>
                        }
                        if (@i.Status == 0)
                        {
                            <td style="color:red; font-size:16px;">InActive</td>
                        }
                    }


                    <td class="justify-content-center d-flex">

                        <button value="@i.CmsPageId" type="button" class="btn CMSEditButton" data-bs-toggle="modal" data-bs-target="#exampleModalAdminSkillEdit"><i class="fa fa-pencil-square-o" style="color:#F88634;" aria-hidden="true"></i></button>

                       <!-- <span class="approveCMS" value="@i.CmsPageId" type="button" id=""><i class="bi bi-check-circle" style="color:green;"></i></span>-->
                        <span class="deleteCMS" value="@i.CmsPageId" type="button" id="" style="margin-top:6px;"><i class="fa fa-trash-o" aria-hidden="true"></i></span>

                    </td>

                </tr>


                //For Skill Edit



            }

        }

    </tbody>
</table>


<div class="modal fade" id="exampleModalCMSAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">


        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <div class="row g-3">
                    <div class="col-lg-12">
                        <label for="" class="form-label">Title</label>
                        <input type="text" class="form-control" name="skillName" id="CMSTitle" placeholder="Title" required>
                        <span class="d-none" id="skillSpan" style="color: red; font-size: 14px;">*Please enter something!</span>
                    </div>

                    <div class="col-lg-12">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="CMSDescription" rows="3"></textarea>
                    </div>

                    <div class="col-lg-12">
                        <label for="" class="form-label">Slug</label>
                        <input type="text" class="form-control" name="" id="CMSSlug" placeholder="Slug" required>
                        <span class="d-none" id="" style="color: red; font-size: 14px;">*Please enter something!</span>

                    </div>
                    <div class="col-12">
                        <label for="status" class="form-label">Status</label>
                        <select id="SelectStatus" class="form-select">
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                    </div>



                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-outline-secondary rounded-pill cancelPrompt" data-bs-dismiss="modal">Cancel</button>

                <button type="button" class="btn btn-outline-warning rounded-pill" id="addCMS">Create</button>
            </div>
        </div>

    </div>
</div>



<div class="modal fade" id="exampleModalAdminSkillEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">


        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Mission Theme</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <div class="row g-3">
                    <div class="col-lg-12">
                        <label for="" class="form-label">Title</label>
                        <input type="text" class="form-control" name="skillName" id="CMSTitleEdit" placeholder="Title" required>
                        <span class="d-none" id="skillSpanEdit" style="color: red; font-size: 14px;">*Please enter something!</span>
                    </div>

                    <div class="col-lg-12">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="CMSDescriptionEdit" rows="3"></textarea>
                    </div>

                    <div class="col-lg-12">
                        <label for="" class="form-label">Slug</label>
                        <input type="text" class="form-control" name="" id="CMSSlugEdit" placeholder="Slug" required>
                        <span class="d-none" id="" style="color: red; font-size: 14px;">*Please enter something!</span>

                    </div>
                    <div class="col-12">
                        <label for="status" class="form-label">Status</label>
                        <select id="SelectStatusEdit" class="form-select">
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                    </div>



                </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-outline-secondary rounded-pill cancelPrompt" data-bs-dismiss="modal">Cancel</button>

                <button type="button" class="btn btn-outline-warning rounded-pill" id="editCMS">Edit</button>
            </div>
        </div>

    </div>
</div>
