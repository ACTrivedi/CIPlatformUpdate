@model CIPlatformIntegration.Entities.ViewModel.AdminViewModel;
<div>
    <h2 class="CMSTag">Banner Management</h2>
    <hr style="margin-top: -10px;" />

</div>

<button type="button" class="btn btn-outline-warning rounded-pill" data-bs-toggle="modal" data-bs-target="#exampleModalBannerAdd" style="position: relative;top: 4.5vh;left: 73vw; z-index:1"> Add</button>

<table id="BannerDataTable" class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Text</th>
            <th scope="col">Sort-Order</th>
            <th scope="col">Image</th>

            <th scope="col" >Action</th>

        </tr>
    </thead>
    <tbody>

        @{

            <!-- Modal -->
            foreach (var i in Model.banners)
            {
                <tr >
                    <th scope="row">@i.Text</th>


                    <td>@i.SortOrder</td>


                    <td> <img src="@i.Image" alt="Image description"  style="height:100px;width:100px"></td>



                    <td class="justify-content-center d-flex" style="height:100px;">

                        
                        <button type="button" class="fa fa-pencil-square-o" data-bs-toggle="modal" data-bs-target="#exampleModalBannerEdit" onclick="bannerDetail(@i.BannerId)" style="color:#F88634;border:none;"></button>

                        <span onclick="DeleteBanner(@i.BannerId)" type="button" id="" style="margin-top: 38px;"><i class="bi bi-trash3-fill" style="margin-left: 15px;"></i></span>

                    </td>

                </tr>


                //For Skill Edit



            }

        }

    </tbody>
</table>



  
<div class="modal fade" id="exampleModalBannerAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add/Edit Mission Skills</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-column align-items-center pt-5 m-0">
                        <input class="form-control" type="file" name="formFile" id="bannerfileimg" accept="image/jpeg,image/png,image/jpg">
                    </div>
                    <div class="col-md-12 pt-2">
                        <label for="missiontheme" class="form-label">Banner Text </label>
                        <textarea class="form-control" id="bannertext" name="bannerText" placeholder="Enter Banner Text" maxlength="100"></textarea>
                    </div>
                    <div class="col-md-12 pt-2">
                        <label for="BannerSortOrder" class="form-label">Sort Order</label>
                        <input type="number" class="form-control" name="sortOrder" id="bannersort" min="1" max="50" placeholder="Sort Order from 1 to 50">
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-dark rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-outline-warning rounded-pill" id="bannersavebtn" onclick="addBanner()">Submit</button>
                </div>
            </div>
    </div>
</div>


      <input id="bannerInputId" hidden />  




      
<div class="modal fade" id="exampleModalBannerEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add/Edit Mission Skills</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-column align-items-center m-0">
                        
                        <img src="" alt="Image description" style="height: 16vh; width: 24vh;" id="bannerfileimgEdit">
                        <input class="form-control mt-3" type="file" name="formFileEdit" id="bannerfileimgEditNew"  accept="image/jpeg,image/png,image/jpg">
                    </div>
                    <div class="col-md-12 pt-2">
                        <label for="missiontheme" class="form-label">Banner Text </label>
                        <textarea class="form-control" id="bannerTextEdit" name="bannerTextEdit" placeholder="Enter Banner Text" maxlength="100"></textarea>
                    </div>
                    <div class="col-md-12 pt-2">
                        <label for="BannerSortOrder" class="form-label">Sort Order</label>
                        <input type="number" class="form-control" name="sortOrderEdit" id="bannersortEdit" min="1" max="50" placeholder="Sort Order from 1 to 50">
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-dark rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-outline-warning rounded-pill" id="bannerEditbtn" onclick="editBanner()">Submit</button>
                </div>
            </div>
    </div>
</div>

