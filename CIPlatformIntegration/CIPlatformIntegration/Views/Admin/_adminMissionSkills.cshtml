@model CIPlatformIntegration.Entities.ViewModel.AdminViewModel;
<div>
    <h2 class="missionSkillTag">Mission Skills</h2>
    <hr style="margin-top: -10px;" />

</div>

<button type="button" class="btn btn-outline-warning rounded-pill" data-bs-toggle="modal" data-bs-target="#exampleModalAdminSkillAdd" style="position: relative;top: 4.5vh;left: 73vw; z-index:1"> Add</button>

<table id="missionSkillsDataTable" class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Skill Title</th>
            <th scope="col">Status</th>

            <th scope="col" style="text-align:center">Action</th>

        </tr>
    </thead>
    <tbody>

        @{

            <!-- Modal -->
            foreach (var i in Model.skills)
            {
                <tr>
                    <th scope="row">@i.SkillName</th>

                    @{
                        if (@i.Status == 1)
                        {
                            <td style="color:#14C506; font-size:16px;">Active</td>
                        }
                        if (@i.Status == 0)
                        {
                            <td style="color:red; font-size:16px;">InActive</td>
                        }
                    }


                    <td class="justify-content-center d-flex">

                        <button value="@i.SkillId" type="button" class="btn skillsEditButton" data-bs-toggle="modal" data-bs-target="#exampleModalAdminSkillEdit"> <i class="fa fa-pencil-square-o" style="color:#F88634;" aria-hidden="true"></i></button>

                       
                        <span class="deleteMissionSkills" value="@i.SkillId" type="button" id="" style="margin-top: 7px;"><i class="bi bi-x-circle" style="color:red;"></i></span>

                    </td>

                </tr>


                //For Skill Edit



            }

        }

    </tbody>
</table>


<div class="modal fade" id="exampleModalAdminSkillAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">


        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Mission Theme</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <div class="row g-3">
                    <div class="col-lg-12">
                        <label for="" class="form-label">Theme Title</label>
                        <input type="text" class="form-control" name="skillName" id="skillName" placeholder="Enter Skill Name" required>
                        <span class="d-none" id="skillSpan" style="color: red; font-size: 14px;">*Please enter something!</span>
                    </div>


                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-outline-secondary rounded-pill cancelPrompt" data-bs-dismiss="modal">Cancel</button>

                <button type="button" class="btn btn-outline-warning rounded-pill" id="addMissionSkills">Create</button>
            </div>
        </div>

    </div>
</div>



<div class="modal fade" id="exampleModalAdminSkillEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">


        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Mission Theme</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <div class="row g-3">
                    <div class="col-lg-12">
                        <label for="" class="form-label">Theme Title</label>
                        <input type="text" class="form-control" name="editskillName" id="editSkillName" placeholder="Enter Skill Name" required>
                        <div class="">
                            <label for="status" class="form-label">Status</label>
                            <select id="SelectStatus" class="form-select">
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                        <span class="d-none" id="titleSpan" style="color: red; font-size: 14px;">*Please enter something!</span>
                    </div>


                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-outline-secondary rounded-pill cancelPrompt" data-bs-dismiss="modal">Cancel</button>

                <button type="button" class="btn btn-outline-warning rounded-pill" id="editMissionSkills">Edit</button>
            </div>
        </div>

    </div>
</div>